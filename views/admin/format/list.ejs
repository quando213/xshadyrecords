<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../head'); -%>
</head>

<body id="page-top">
<div id="wrapper">
    <%- include('../sidebar'); -%>
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <!-- TopBar -->
            <%- include('../topbar'); -%>
            <!-- Topbar -->
            <!-- Container Fluid-->
            <div class="container-fluid" id="container-wrapper">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Format List</h1>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="..">Home</a></li>
                        <li class="breadcrumb-item">Formats</li>
                        <li class="breadcrumb-item active" aria-current="page">Format List</li>
                    </ol>
                </div>

                <div class="row">
                    <div class="col-lg-12 mb-4">
                        <!-- Simple Tables -->
                        <div class="card">
                            <div class="table-responsive">
                                <table class="table align-items-center table-flush">
                                    <thead class="thead-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Update</th>
                                        <th>Delete</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% for (var i = 0; i < format.length; i++) { %>
                                        <tr>
                                            <td><a href="#"><%= format[i].id %></a></td>
                                            <td><%= format[i].name %></td>
                                            <td><a href="/admin/format/update/<%= format[i].id %>" class="btn btn-sm btn-primary">Update</a></td>
                                            <td><a href="/admin/format/delete/<%= format[i].id %>" class="btn btn-sm btn-danger">Delete</a></td>
                                        </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="card-footer"></div>
                        </div>
                    </div>
                </div>
                <!--Row-->
                <%- include('../sign-out-modal'); -%>
            </div>
            <!---Container Fluid-->
        </div>
        <%- include('../footer'); -%>
    </div>
</div>
<!-- Scroll to top -->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
<%- include('../scripts'); -%>
</body>
</html>