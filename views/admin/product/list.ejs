<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../head'); -%>
</head>

<body id="page-top">
<div id="wrapper">
    <%- include('../sidebar'); -%>
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <!-- TopBar -->
            <%- include('../topbar'); -%>
            <!-- Topbar -->
            <!-- Container Fluid-->
            <div class="container-fluid" id="container-wrapper">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800"><%= title %></h1>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="..">Home</a></li>
                        <li class="breadcrumb-item">Product</li>
                        <li class="breadcrumb-item active" aria-current="page"><%= title %> </li>
                    </ol>
                </div>

                <div class="row">
                    <div class="col-lg-12 mb-4">
                        <!-- Simple Tables -->
                        <div class="card">
                            <div class="table-responsive">
                                <table class="table align-items-center table-flush">
                                    <thead class="thead-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Artist</th>
                                        <th>Format</th>
                                        <th>Genre</th>
                                        <th>Stock</th>
                                        <th>Price</th>
                                        <th>Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% for (var i = 0; i < products.length; i++) { %>
                                        <div class="modal fade" id="DeleteProduct" tabindex="-1" role="dialog" aria-labelledby="deleteProduct"
                                             aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete <b><%= products[i].name %></b> by <%= products[i].artistName %>  </p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
                                                        <a href="/admin/product/delete/<%= products[i].id %>" class="btn btn-primary">Delete</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <tr>
                                            <td><a href="#"><%= products[i].id %></a></td>
                                            <td><%= products[i].name %></td>
                                            <td><%= products[i].artistName %></td>
                                            <td><%= products[i].format.name %></td>
                                            <td><%= products[i].genre.name %></td>
                                            <td><%= products[i].stockQuantity %></td>
                                            <td>
                                                <% if (products[i].discount > 0) { %>
                                                    <strike><%= products[i].price.toLocaleString('it-IT', {
                                                            style: 'currency',
                                                            currency: 'VND'
                                                        }) %></strike><br>
                                                    <%= (products[i].price * (1 - products[i].discount / 100)).toLocaleString('it-IT', {
                                                        style: 'currency',
                                                        currency: 'VND'
                                                    }) %>
                                                <% } else { %>
                                                    <%= products[i].price.toLocaleString('it-IT', {
                                                        style: 'currency',
                                                        currency: 'VND'
                                                    }) %>
                                                <% } %>
                                            </td>
                                            <td>
                                                <a href="/admin/product/update/<%= products[i].id %>" class="btn-block btn-sm btn-primary">Update</a>
                                                <a class="btn-block btn-sm btn-danger" href="javascript:void(0);" data-toggle="modal" data-target="#DeleteProduct">Delete</a>
                                            </td>
                                        </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="card-footer"></div>
                        </div>
                    </div>
                </div>
                <!--Row-->
                <%- include('../sign-out-modal'); -%>
            </div>
            <!---Container Fluid-->
        </div>
        <%- include('../footer'); -%>
    </div>
</div>
<!-- Scroll to top -->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
<%- include('../scripts'); -%>
</body>
</html>