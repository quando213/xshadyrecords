<!doctype html>
<html lang="en">
<head>
    <%- include('../head'); -%>
</head>
<body id="page-top">
<div id="wrapper">
    <%- include('../sidebar'); -%>
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <%- include('../topbar'); -%>
            <div class="container-fluid" id="container-wrapper">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Genres List</h1>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="..">Home</a></li>
                        <li class="breadcrumb-item">Genres</li>
                        <li class="breadcrumb-item active" aria-current="page">Genres List</li>
                    </ol>
                </div>
                <div class="row">
                    <div class="col-lg-12 mb-4">
                        <div class="card">
                            <div class="table-responsive">
                                <table class="table align-items-center table-flush">
                                    <thead class="thead-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% for (var i = 0; i < genres.length; i++) { %>
                                        <tr>
                                            <td><a href="#"><%= genres[i].id %></a></td>
                                            <td><%= genres[i].name %></td>
                                            <td><% if (genres[i].description && genres[i].description.length > 200) { %>
                                                <%= genres[i].description.slice(0,200) %>...
                                            <% } else { %>
                                                    <%= genres[i].description %>
                                            <% } %></td>
                                            <td><a href="/admin/genre/update/<%= genres[i].id %>" class="btn btn-sm btn-primary">Update</a></td>
                                            <td><a href="/admin/genre/delete/<%= genres[i].id %>" class="btn btn-sm btn-danger">Delete</a></td>
                                        </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <div class="card-footer"></div>
                        </div>
                    </div>
                </div>
                <%- include('../sign-out-modal'); -%>
            </div>
        </div>
        <%- include('../footer'); -%>
    </div>
</div>
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
<%- include('../scripts'); -%>
</body>
</html>